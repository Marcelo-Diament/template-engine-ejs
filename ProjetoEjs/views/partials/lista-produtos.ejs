<section class="produtos">

  <% for(let produto of produtos) { %>

  <article id="produtoCard<%= produto.id %>" class="produto-card">
    <img src="<%= produto.imagem %>" alt="Imagem do produto <%= produto.titulo %>" class="produto-imagem">
    <h3 class="produto-titulo"><%= produto.categoria %> > <%= produto.titulo %> <%= produto.marca %></h3>
    <h4 class="produto-preco">R$ <%= produto.preco %></h4>
    <div class="produto-btn-group">
      <a href="/products/<%= produto.id %>" class="produto-btn">Ver Detalhes</a>
    </div>
  </article>

  <% } %>

</section>